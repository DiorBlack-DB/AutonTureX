<Page x:Class="WPFUIKitProfessional.Pages.Analytics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUIKitProfessional.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Analytics" FontFamily="Poppins">

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
        <StackPanel>
            <Label Content="Analytics" FontSize="50" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox
                     FontSize="15"
                     x:Name="txtLogin"
                     Text="{Binding Authorization.Login}"
                     Foreground="{DynamicResource PrimaryTextColor}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     material:HintAssist.Hint="Логин" Width="220"/>

            <Button Content="sdfsf" Background="#772250" Foreground="{DynamicResource SecundaryWhiteColor}"/>
        </StackPanel>
    </Border>
</Page>
